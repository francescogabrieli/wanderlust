{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "typeRoots": ["./src/types", "./node_modules/@types"],
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowJs": true,
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@assets/*": [
        "assets/*"
      ],
      "@components/*": [
        "src/components/*"
      ],
      "@hooks/*": [
        "src/hooks/*"
      ],
      "@styles/*": [
        "src/styles/*"
      ],
      "@constants/*": [
        "src/constants/*"
      ],
    }
  },
  "include": [
    "src/**/*",
    "assets/**/*"
  ]
}